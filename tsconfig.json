{
    "compilerOptions": {
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "target": "ES2020",
      "jsx": "react",
      "jsxFactory": "createElement",
      "jsxFragmentFactory": "Fragment",
      "outDir": "dist",
      "rootDirs": ["./src", "./src/redux", "./src/utils"],
      "paths" : {
        "@raiz/react-simple-store" : ["./src"],
        "@raiz/react-simple-store/utils" : ["./utils"]
      }
    },
    "include": ["src/**/*", "tests/**/*", "utils/**/*", "redux/**/*"],
    "exclude": ["node_modules", "dist", "test/**/*"]
  }



