{
    "compilerOptions": {
      "strict": true,
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "allowJs": true,
      "jsx": "react",
      "declaration": true,
      "outDir": "dist",
      "forceConsistentCasingInFileNames": true,
      "experimentalDecorators": true,
   
      "paths" : {
        "@raiz/react-simple-store" : ["./src"],
        "@raiz/react-simple-store/utils" : ["./utils/src"]
      }
    },
    "exclude": ["node_modules", "dist", "test/**/*"]
  }