{
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "ES2020",
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "jsxFragmentFactory": "React.Fragment",
    "declaration": true,
    "declarationDir": "./dist",
    "paths": {
      "@raiz/react-simple-store": [
        "./src"
      ],
      "@raiz/react-simple-store/utils": [
        "./utils/src"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "test/**/*"
  ]
}